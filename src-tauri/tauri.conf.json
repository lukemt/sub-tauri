{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sub-tauri",
  "version": "0.1.0",
  "identifier": "com.sub-tauri.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "sub-tauri",
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "fullscreen": false,
        "width": 400,
        "height": 100,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}